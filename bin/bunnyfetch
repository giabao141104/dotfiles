$f0â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
â”‚             $d$f1$h  $t$wmname         $f0â”‚
â”‚   $t(\ /)     $f3$k  $t$kernel       $f0â”‚
â”‚   $t($d . .$t)    $f2$sh  $t$shell        $f0â”‚
â”‚  $t c($f1"$t)($f1"$t)   $f5$r  $t$resolution   $f0â”‚
â”‚             $f4$p  $t$(echo $packagecount)    $f0â”‚
â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜
EOF

